<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Histórico"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="25dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione a imagem desejada \npara vizualização."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@+id/title_history" />

    <LinearLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@+id/description_history"
        app:layout_constraintBottom_toBottomOf="parent">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
